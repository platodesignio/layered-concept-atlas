generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions  Session[]
  feedbacks Feedback[]
  auditLogs AuditLog[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model LayerDefinition {
  id          String   @id @default(cuid())
  index       Int      @unique
  slug        String   @unique
  nameJa      String
  descriptionJa String
  colorClass  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  layerEntries  LayerEntry[]
  dictionaryTerms DictionaryTerm[]
  mappingRulesFrom MappingRule[] @relation("FromLayer")
  mappingRulesTo   MappingRule[] @relation("ToLayer")

  @@map("layer_definitions")
}

model DictionaryTerm {
  id          String   @id @default(cuid())
  layerId     String
  term        String
  weight      Float    @default(1.0)
  isNegation  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  layer LayerDefinition @relation(fields: [layerId], references: [id])

  @@index([layerId])
  @@map("dictionary_terms")
}

model MappingRule {
  id          String   @id @default(cuid())
  fromLayerId String
  toLayerId   String
  pattern     String
  replacement String
  condition   String?
  priority    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  fromLayer LayerDefinition @relation("FromLayer", fields: [fromLayerId], references: [id])
  toLayer   LayerDefinition @relation("ToLayer",   fields: [toLayerId],   references: [id])

  @@index([fromLayerId])
  @@index([toLayerId])
  @@map("mapping_rules")
}

model Concept {
  id          String   @id @default(cuid())
  slug        String   @unique
  titleJa     String
  summary     String?
  tags        String[]
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  layerEntries LayerEntry[]
  linksFrom    ConceptLink[] @relation("LinkFrom")
  linksTo      ConceptLink[] @relation("LinkTo")
  auditLogs    AuditLog[]

  @@map("concepts")
}

model LayerEntry {
  id        String   @id @default(cuid())
  conceptId String
  layerId   String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  concept Concept         @relation(fields: [conceptId], references: [id], onDelete: Cascade)
  layer   LayerDefinition @relation(fields: [layerId],   references: [id])

  @@unique([conceptId, layerId])
  @@index([conceptId])
  @@index([layerId])
  @@map("layer_entries")
}

model ConceptLink {
  id         String   @id @default(cuid())
  fromId     String
  toId       String
  relation   String
  createdAt  DateTime @default(now())

  from Concept @relation("LinkFrom", fields: [fromId], references: [id], onDelete: Cascade)
  to   Concept @relation("LinkTo",   fields: [toId],   references: [id], onDelete: Cascade)

  @@unique([fromId, toId, relation])
  @@map("concept_links")
}

model AssertionTest {
  id          String   @id @default(cuid())
  name        String
  inputText   String
  expectedLayer String
  expectedMinScore Float
  createdAt   DateTime @default(now())

  @@map("assertion_tests")
}

model Run {
  id        String   @id @default(cuid())
  runType   String
  inputHash String
  createdAt DateTime @default(now())

  artifacts RunArtifact[]
  feedbacks Feedback[]

  @@index([inputHash])
  @@map("runs")
}

model RunArtifact {
  id        String   @id @default(cuid())
  runId     String
  key       String
  value     Json
  createdAt DateTime @default(now())

  run Run @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@unique([runId, key])
  @@map("run_artifacts")
}

model Feedback {
  id        String   @id @default(cuid())
  runId     String?
  userId    String?
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  run  Run?  @relation(fields: [runId],  references: [id])
  user User? @relation(fields: [userId], references: [id])

  @@index([runId])
  @@map("feedbacks")
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  entityType String
  entityId   String
  diff       Json?
  createdAt  DateTime @default(now())

  user    User?    @relation(fields: [userId], references: [id])
  concept Concept? @relation(fields: [entityId], references: [id], map: "audit_concept_fk")

  @@index([entityType, entityId])
  @@index([userId])
  @@map("audit_logs")
}

model PackVersion {
  id        String   @id @default(cuid())
  key       String   @unique
  version   Int
  createdAt DateTime @default(now())

  @@map("pack_versions")
}

model RateLimit {
  id        String   @id @default(cuid())
  ip        String
  endpoint  String
  count     Int      @default(1)
  windowEnd DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([ip, endpoint])
  @@index([windowEnd])
  @@map("rate_limits")
}
